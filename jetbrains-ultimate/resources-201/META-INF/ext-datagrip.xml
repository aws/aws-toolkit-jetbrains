<idea-plugin>
    <extensions defaultExtensionNs="aws.toolkit">
        <explorer.serviceNode implementation="software.aws.toolkits.jetbrains.core.explorer.nodes.RdsExplorerRootNode"/>
    </extensions>
    <actions>
        <group id="aws.toolkit.explorer.rds.mysql" popup="true" compact="false">
            <action id="rds.createConfiguration" class="software.aws.toolkits.jetbrains.services.rds.actions.CreateConfigurationAction"/>
        </group>
    </actions>
    <extensions defaultExtensionNs="com.intellij.database">
        <!-- order="first" comes from how other instances of connectionInterceptor are implemented in DataGrip -->
        <connectionInterceptor implementation="software.aws.toolkits.jetbrains.services.rds.auth.IamAuth" order="first"/>
    </extensions>
</idea-plugin>
