{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "ES2019",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2020", "es5", "es6", "dom"],
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "strictPropertyInitialization": false
    },
    "include": ["./src/**/*"],
    "exclude": ["build", "out", "node_modules", ".vscode-test"],
}
